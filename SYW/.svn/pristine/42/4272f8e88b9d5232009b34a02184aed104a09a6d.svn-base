	{
		fade_out_time    0.0
        fade_in_time    0.08     
		keyframe_colour
		offset		0.0, 0.0, 0.0
		keyframe_colour
		{
				0.04, 	240, 100, 0
				0.08, 	240, 130, 0
		}
			
		keyframe_radius
		{
				0.10, 	9.0
				0.30, 	9.2
				0.45, 	9.1				
		}
	}
}

effect cannon_flame
{ 
